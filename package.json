{
    "name": "express",
    "version": "1.0.0",
    "license": "MIT",
    "author": {
        "name": "Muhammad Haykal",
        "email": "muhammadhaykall99@gmail.com",
        "url": "https://github.com/haykal-fe-verd"
    },
    "description": "A production-ready Express.js REST API starter template with TypeScript, JWT authentication, role-based access control (RBAC), Prisma ORM, Redis caching, and comprehensive OpenAPI documentation powered by Scalar.",
    "homepage": "https://github.com/haykal-fe-verd/express-starter",
    "repository": {
        "type": "github",
        "directory": "express-starter",
        "url": "https://github.com/haykal-fe-verd/express-starter"
    },
    "keywords": [
        "express",
        "typescript",
        "rest-api",
        "jwt-authentication",
        "rbac",
        "role-based-access-control",
        "prisma",
        "postgresql",
        "redis",
        "openapi",
        "scalar",
        "api-documentation",
        "boilerplate",
        "starter-template",
        "nodejs",
        "backend",
        "middleware",
        "zod-validation"
    ],
    "main": "main.ts",
    "scripts": {
        "dev": "nodemon",
        "start": "node dist/main.js",
        "build": "tsc && tsc-alias",
        "test": "jest",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:pull": "prisma db pull",
        "db:seed": "prisma db seed",
        "db:studio": "prisma studio",
        "db:migrate": "prisma migrate dev",
        "db:migrate:deploy": "prisma migrate deploy",
        "db:migrate:reset": "prisma migrate reset",
        "db:format": "prisma format",
        "format": "biome format --write src",
        "format:files": "biome format --write",
        "lint": "biome lint --write src",
        "lint:files": "biome lint --write",
        "check": "biome check --write src",
        "check:files": "biome check --write",
        "ci:check": "biome check src",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f"
    },
    "jest": {
        "transform": {
            "^.+\\.[t|j]sx?$": "babel-jest"
        }
    },
    "dependencies": {
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "@scalar/express-api-reference": "^0.8.30",
        "bcrypt": "^6.0.0",
        "chalk": "^5.6.2",
        "dotenv": "^17.2.3",
        "express-zod-api": "^26.2.0",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.16.3",
        "redis": "^5.10.0",
        "winston": "^3.19.0",
        "winston-daily-rotate-file": "^5.0.0",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@biomejs/biome": "2.3.10",
        "@faker-js/faker": "^10.1.0",
        "@jest/globals": "^30.2.0",
        "@types/bcrypt": "^6.0.0",
        "@types/express": "^5.0.6",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^25.0.3",
        "@types/pg": "^8.16.0",
        "@types/supertest": "^6.0.3",
        "babel-jest": "^30.2.0",
        "express": "^5.2.1",
        "jest": "^30.2.0",
        "nodemon": "^3.1.11",
        "prisma": "^7.2.0",
        "supertest": "^7.1.4",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
